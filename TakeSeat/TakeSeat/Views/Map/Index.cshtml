@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}
<script src="~/js/Services/DataResources.js"></script>
<script src="~/js/Controllers/MapController.js"></script>
<script src="~/js/CanvasLogic/RoomObjectFactory.js"></script>
<div class="layout" ng-controller="Map" ng-init="Init()">
    <div class="toolPanel">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Tools</h3>
            </div>
            <div class="panel-body">
                <div class="md-overlay">
                    <button title="Add Wall"
                            type="button" class="btn-tool" ng-click="changeMode('line')"
                            ng-class="{activeBtn : isSelected('line')}">
                        <img src=@Url.Content("~/img/wall.png") />
                    </button>
                </div>
                <div class="md-overlay">
                    <button title="Add Table"
                            type="button" class="btn-tool" ng-click="changeMode('table')"
                            ng-class="{activeBtn : isSelected('table')}">
                        <img src=@Url.Content("~/img/table.png") />
                    </button>
                </div>
                <div class="md-overlay">
                    <button title="Show Room"
                            type="button" class="btn-tool" ng-click="showRoom()">
                        <img src=@Url.Content("~/img/newroom.png") />
                    </button>
                </div>
                <div class="md-overlay">
                    <button title="Add Window"
                            type="button" class="btn-tool" ng-click="changeMode('window')"
                            ng-class="{activeBtn : isSelected('window')}">
                        <img src=@Url.Content("~/img/window.png") />
                    </button>
                </div>
                <div class="md-overlay">
                    <button title="Add Door"
                            type="button" class="btn-tool" ng-click="changeMode('door')"
                            ng-class="{activeBtn : isSelected('door')}">
                        <img src=@Url.Content("~/img/door.png") />
                    </button>
                </div>
                <div class="md-overlay">
                    <button title="Delete"
                            type="button" class="btn-tool" ng-click="changeMode('delete')"
                            ng-class="{activeBtn : isSelected('delete')}">
                        <img src=@Url.Content("~/img/delete.png") />
                    </button>
                </div>
            </div>
        </div>

    </div>
    <div class="canvasPanel">
        <div id="selectRoomDiv">
            <select class="form-control" ng-model="selectedRoom"
                    ng-options="r.Caption for r in rooms"
                    ng-change="changeRoom(selectedRoom.Id)"></select>
        </div>
        <div id="editRoomDiv">
            <div id="editRoomButtonsDiv">
                <button title="Save" type="button" ng-click="saveRoom()">
                    <img src=@Url.Content("~/img/save.png") />
                </button>
                <button title="Cancel" type="button" ng-click="undoRoom()">
                    <img src=@Url.Content("~/img/undo.png") />
                </button>
            </div>
            <div id="editRoomInputDiv">
                <input id="roomCaptionInput" class="form-control" />
            </div>
        </div>
    </div>
    <div class="canvasPanel">
        <div>{{'Room: ' + RoomCaption}}</div>
        <div class="canvas">@Html.Partial("Paper")</div>
        <div>{{X +' : '+ Y}}</div>
        <div>{{'HitResult: ' + HitResult}}</div>
    </div>
    <div id="tableDropDownMenu" class="dropDownMenu">
        <div id="tableDropDownMenuButtons">
            <button class="dropDownButton" title="Assign Employee" type="button" ng-click="showTableEmployeeDropDownPanel()">
                <img src=@Url.Content("~/img/assign.png") />
            </button>
            <button class="dropDownButton" title="Discard Employee" type="button" ng-click="discardEmployee()">
                <img src=@Url.Content("~/img/discard.png") />
            </button>
            <button class="dropDownButton" title="Set Number" type="button" ng-click="showTableNumberDropDownPanel()">
                <img src=@Url.Content("~/img/number.png") />
            </button>
        </div>
        <div id="tableDropDownMenuEmployee" >
            <div id="tableInputDiv">
                <input id="tableDropDownEmployeeInput" class="form-control" />
            </div>
        </div>
        <div id="tableDropDownMenuNumber">
            <div>
                <input id="tableDropDownNumberInput" type="text" class="form-control"
                       value={{tableDropDownNumber}} ng-keypress="tableNumberKeyPress($event)" />
            </div>
        </div>
    </div>
</div>

